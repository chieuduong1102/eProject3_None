@model IEnumerable<eProject3_Verhicle_Management.Models.CurrencyConversion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FromCurrency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToCurrency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ratio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FromCurrency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToCurrency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ratio)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
